{
  "name": "Metron AI Catalogue",
  "build": {
    "dockerfile": "../Dockerfile",
    "args": {
      "UV_INSTALL_DIR": ""
    }
  },
  "runArgs": [
    "--ipc=host",
    "--ulimit",
    "memlock=-1",
    "--ulimit",
    "stack=67108864",
    "--env-file",
    ".env"
  ],
  "postStartCommand": "./.devcontainer/devcontainer_post_start.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "njpwerner.autodocstring",
        "eamodio.gitlens",
        "github.copilot",
        "github.copilot-chat",
        "github.vscode-github-actions"
      ]
    }
  },
  "remoteUser": "metron",
  "remoteEnv": {
    "UV_INSTALL_DIR": "/home/metron"
  }
}